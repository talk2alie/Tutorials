@model IEnumerable<OdeToFood.Models.Restaurant>

@{ 
    ViewBag.Title = "Home";
}

<table>
    @foreach (var restaurant in Model)
    {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@restaurant.Id">View Details</a>
            </td>
            <td>@restaurant.Name</td>
        </tr>
    }
</table>
<div>
    <a asp-action="Create">Add Restaurant</a>
</div>